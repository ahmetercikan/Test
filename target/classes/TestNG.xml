<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Odev">
    <test name="Chrome Test">
        <parameter name="browserName" value="chrome" />
        <parameter name="browserVersion" value="79.0" />
        <parameter name="platformName" value="Windows 10" />
        <classes>
            <class name="UI.testCases.LoginPageTest" />
            <class name="UI.testCases.HomePageTest" />
        </classes>
    </test>
    <test name="Firefox Test">
        <parameter name="browserName" value="firefox" />
        <parameter name="browserVersion" value="62.0" />
        <parameter name="platformName" value="Windows 10" />
        <classes>
            <class name="UI.testCases.LoginPageTest" />
            <class name="UI.testCases.HomePageTest" />
        </classes>
    </test>
    <test name="IE Test">
        <parameter name="browserName" value="ie" />
        <parameter name="browserVersion" value="11.0" />
        <parameter name="platformName" value="Windows 10" />
        <classes>
            <class name="UI.testCases.LoginPageTest" />
            <class name="UI.testCases.HomePageTest" />
        </classes>
    </test>
</suite>